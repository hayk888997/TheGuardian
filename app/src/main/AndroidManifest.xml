<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.test.theguardian">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.test.theguardian.TheGuardianApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@drawable/guardian_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.example.test.theguardian.view.ui.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.example.test.theguardian.view.ui.MainActivity"/>
        <activity android:name="com.example.test.theguardian.view.ui.DetailsActivity"/>

    </application>

</manifest>